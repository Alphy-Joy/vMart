{% extends 'base_public.html.twig' %}

{% block content %}
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
				{% for product in product_by_price%}
					<div class="col mb-5">
						<div
							class="card h-100">
							<!-- Product image-->
							{% if product.productImage %}
								{% set productImage = product.productImage%}
								<img class="card-img-top" src="{{ asset('images/' ~ product.productImage) }}" alt="{{ product.productName }}"/>
							{% else %}
								<img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="{{ product.productName }}"/>
							{% endif %}
							
							<!-- Product details-->
							<div class="card-body p-1">
								<div
									class="text-center">
									<!-- Product name-->
									<h5 class="fw-bolder mt-2">{{ product.productName }}</h5>
									<!-- Product price-->
                                    <p>{{ product.quantity}}</p>
								</div>
							</div>
							<!-- Product actions-->
							<div class="card-footer p-1 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<p href="#">Rs.{{ product.price }}</p>
								</div>
							</div>
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent ">
								<div class="text-center">
									<a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
