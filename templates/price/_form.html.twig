{{ form_start(form) }}
{% block content %}
	<main>
		<div class="container-fluid px-4 mt-3">
			<div class="container h-100">
				<div class="row justify-content-center align-items-center list-table  ">
					<div class="col-12 col-md-10 col-lg-8 mt-4">
						<div class="form-group">
							{{ form_label(form.category) }}
							{{ form_widget(form.category, {'attr': {'class': 'form-control mt-2'}}) }}
						</div>
						<!-- Input fields -->
						<div class="form-group">
							{{ form_label(form.product) }}
							{{ form_widget(form.product, {'attr': {'class': 'form-control mt-2'}}) }}
						</div>
						<div class="form-group">
							{{ form_label(form.Quantity) }}
							{{ form_widget(form.Quantity, {'attr': {'class': 'form-control mt-2'}}) }}
						</div>
                        <div class="form-group">
							{{ form_label(form.price) }}
							{{ form_widget(form.price, {'attr': {'class': 'form-control mt-2'}}) }}
						</div>

						<div class="form-group">
							{{ form_label(form.status) }}
							{{ form_widget(form.status, {'attr': {'class': 'form-control mt-2'}}) }}
						</div>
						<button class="btn btn-sm btn-success mt-3">{{ button_label|default('Save') }}</button>
						<!-- End input fields -->
					</div>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
{{ form_end(form) }}
